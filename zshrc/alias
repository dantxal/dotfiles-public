# from Kent C Dodds https://github.com/kentcdodds/dotfiles/blob/main/.zshrc
killport() { lsof -i tcp:"$*" | awk 'NR!=1 {print $2}' | xargs kill -9 ;}

alias zl="source ~/.zshrc"
alias zload="source ~/.zshrc --verbose"
alias lg="lazygit"
alias dst="cd ~/Library/Application\ Support/Steam/steamapps/common/Don\'t\ Starve\ Together"
alias trade="vi ~/trade.txt"
alias aliaz="vi ~/myAlias"
alias viz="vi ~/.zshrc"
alias tmuz="vi ~/.tmux.conf"
alias vichad2="vi ~/.config/chad2"

